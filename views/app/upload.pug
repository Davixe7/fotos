extends ../layout.pug
block content
	include ../nav
	.container
		h1.text-center Sube una imagen
		.row
			.col-md-6.col-md-offset-3
				form(action="/app/fotos" method="post" enctype="multipart/form-data")
					.form-group
						label(for="#title") Titulo
						input(type="text" class="form-control" placeholder="Titulo" name="title" id="title")
					.form-group
						label(for="#archivo") Archivo
						input(type="file" class="form-control" placeholder="Archivo" name="archivo" id="archivo")
					.form-group
						button(type="submit" class="btn btn-primary") Subir
						a(href="/app" class="pull-right") Volver